    "@types/react-helmet": "5.0.8",
    "@types/react-redux": "7.0.8",
    "@types/react-router-dom": "4.3.5",
    "@types/styletron-react": "5.0.0",
    "@types/uuid": "3.4.8",
    "deep-extend": "0.6.0",
    "dottie": "latest",
    "global": "4.4.0",
    "is-browser": "2.1.0",
